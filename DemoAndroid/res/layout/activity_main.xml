<LinearLayout xmlns:ios="http://schemas.android.com/apk/res/android"
    ios:id="@+id/rootLayout"
    ios:layout_width="match_parent"
    ios:layout_height="match_parent"
    ios:background="#ffffff"
    ios:orientation="vertical" >

    <RelativeLayout
        ios:layout_width="match_parent"
        ios:layout_height="wrap_content"
        ios:background="#000000" >

        <TextView
            ios:id="@+id/title"
            ios:layout_width="wrap_content"
            ios:layout_height="wrap_content"
            ios:layout_gravity="center_horizontal"
            ios:layout_margin="10dp"
            ios:text="MyChat"
            ios:textColor="#ffffff"
            ios:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        ios:layout_width="match_parent"
        ios:layout_height="match_parent" >

        <LinearLayout
            ios:id="@+id/content"
            ios:layout_width="match_parent"
            ios:layout_height="wrap_content"
            ios:orientation="vertical" >

            <RelativeLayout
                ios:id="@+id/ericcard"
                ios:layout_width="match_parent"
                ios:layout_height="wrap_content"
                ios:orientation="horizontal" >

                <FrameLayout
                    ios:id="@+id/iconFrame"
                    ios:layout_width="wrap_content"
                    ios:layout_height="wrap_content"
                    ios:layout_centerVertical="true" >

                    <TextView
                        ios:layout_width="40dp"
                        ios:layout_height="40dp"
                        ios:layout_gravity="center"
                        ios:layout_margin="10dp"
                        ios:background="#66ccff" />

                    <TextView
                        ios:layout_width="wrap_content"
                        ios:layout_height="wrap_content"
                        ios:layout_gravity="top|right"
                        ios:layout_margin="5dp"
                        ios:background="@drawable/bshape"
                        ios:text="111"
                        ios:textAlignment="center"
                        ios:textColor="#ffffff"
                        ios:textSize="15sp"
                        ios:visibility="visible" />
                </FrameLayout>

                <LinearLayout
                    ios:layout_width="match_parent"
                    ios:layout_height="wrap_content"
                    ios:layout_toRightOf="@id/iconFrame"
                    ios:orientation="vertical" >

                    <RelativeLayout
                        ios:layout_width="match_parent"
                        ios:layout_height="wrap_content" >

                        <TextView
                            ios:layout_width="match_parent"
                            ios:layout_height="wrap_content"
                            ios:ellipsize="marquee"
                            ios:gravity="left"
                            ios:marqueeRepeatLimit="marquee_forever"
                            ios:paddingBottom="5dp"
                            ios:paddingTop="10dp"
                            ios:password="false"
                            ios:singleLine="true"
                            ios:text="Eric Dong"
                            ios:textColor="#000000"
                            ios:textSize="15sp" />

                        <TextView
                            ios:layout_width="match_parent"
                            ios:layout_height="wrap_content"
                            ios:ellipsize="marquee"
                            ios:gravity="right"
                            ios:marqueeRepeatLimit="marquee_forever"
                            ios:paddingBottom="5dp"
                            ios:paddingRight="10dp"
                            ios:paddingTop="10dp"
                            ios:password="false"
                            ios:singleLine="true"
                            ios:text="11:00"
                            ios:textColor="@android:color/darker_gray"
                            ios:textSize="12sp" />
                    </RelativeLayout>

                    <TextView
                        ios:id="@+id/ericswords"
                        ios:layout_width="match_parent"
                        ios:layout_height="wrap_content"
                        ios:paddingBottom="10dp"
                        ios:paddingTop="5dp"
                        ios:text="My name is Zest3k."
                        ios:textColor="@android:color/darker_gray"
                        ios:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                ios:layout_width="match_parent"
                ios:layout_height="1dp"
                ios:layout_marginLeft="10dp"
                ios:background="#EEEEEE"
                ios:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>